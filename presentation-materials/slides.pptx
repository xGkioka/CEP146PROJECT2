from pptx import Presentation

prs = Presentation()

slides = [
("EU AI Act (2024–2025)", "The World’s First Comprehensive AI Regulation\nSapphire Grant"),
("What Is the EU AI Act?", "- First major law regulating AI\n- Approved by EU Parliament in 2024\n- Focus on safety, transparency, human rights\n- Applies to AI developers and users in the EU"),
("Why Was It Created?", "- Rapid AI growth\n- Concerns: bias, misinformation, privacy\n- Need clear rules for businesses\n- Protect EU citizens"),
("Risk-Based Framework", "Four risk levels:\n• Unacceptable (banned)\n• High Risk (strict rules)\n• Limited Risk (transparency)\n• Minimal Risk (few rules)"),
("Unacceptable AI (Banned)", "- Government social scoring\n- Manipulative/abusive AI\n- Real-time biometric ID in public"),
("High-Risk AI", "Examples:\n• Medical AI\n• Hiring algorithms\n• Critical infrastructure\n• Education/testing tools\nRequirements:\n✓ Accuracy\n✓ Human oversight\n✓ Cybersecurity\n✓ Risk assessments"),
("Transparency Requirements", "- Users must know when interacting with AI\n- AI-generated content must be labeled\n- Training data documentation required"),
("General-Purpose AI Rules", "- Document training data\n- Safety testing required\n- Prevent harmful outputs\n- Stricter rules for powerful models"),
("Penalties", "Fines:\n€7.5M–€35M or up to 7% of global revenue"),
("Conclusion", "The EU AI Act sets global standards\nFocus on safety, rights, accountability\nShaping future AI governance")
]

for title, body in slides:
    slide_layout = prs.slide_layouts[1]
    slide = prs.slides.add_slide(slide_layout)
    slide.shapes.title.text = title
    slide.placeholders[1].text = body

prs.save("EU_AI_Act_Overview.pptx")
print("PPTX saved as EU_AI_Act_Overview.pptx")
